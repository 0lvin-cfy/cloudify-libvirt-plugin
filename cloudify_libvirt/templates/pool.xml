<pool type='dir'>
  <name>{{ name }}</name>
  <uuid>{{ instance_uuid }}</uuid>
  <capacity unit='GiB'>{{ capacity }}</capacity>
  <source>
  </source>
  <target>
    <path>{{ path }}</path>
    <permissions>
      <mode>0755</mode>
      <owner>-1</owner>
      <group>-1</group>
    </permissions>
  </target>
</pool>


