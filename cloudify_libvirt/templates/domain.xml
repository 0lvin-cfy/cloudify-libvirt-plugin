<domain xmlns:qemu="http://libvirt.org/schemas/domain/qemu/1.0" xmlns="" type="qemu">
  <resource>
    <partition>/machine</partition>
  </resource>
  <uuid>{{ instance_uuid }}</uuid>
  <currentMemory unit="KiB">{{ memmory_size }}</currentMemory>
  <on_poweroff>destroy</on_poweroff>
  <devices>
    <console type="pty" tty="/dev/pts/1">
      <alias name="serial0"/>
      <target type="serial" port="0"/>
      <source path="/dev/pts/1"/>
    </console>
    <memballoon model="virtio">
      <alias name="balloon0"/>
      <address function="0x0" type="pci" domain="0x0000" slot="0x04" bus="0x00"/>
    </memballoon>
    <controller type="usb" index="0">
      <alias name="usb0"/>
      <address function="0x2" type="pci" domain="0x0000" slot="0x01" bus="0x00"/>
    </controller>
    <controller type="pci" index="0" model="pci-root">
      <alias name="pci.0"/>
    </controller>
    <controller type="ide" index="0">
      <alias name="ide0"/>
      <address function="0x1" type="pci" domain="0x0000" slot="0x01" bus="0x00"/>
    </controller>
    <video>
      <alias name="video0"/>
      <model heads="1" type="cirrus" vram="9216"/>
      <address function="0x0" type="pci" domain="0x0000" slot="0x02" bus="0x00"/>
    </video>
    <emulator>/usr/bin/qemu-system-x86_64</emulator>
    <graphics autoport="yes" type="vnc" listen="127.0.0.1" port="5900">
      <listen type="address" address="127.0.0.1"/>
    </graphics>
    <interface type="network">
      <target dev="vnet0"/>
      <alias name="net0"/>
      <source network="mynetwork"/>
      <mac address="52:54:00:23:fe:37"/>
      <address function="0x0" type="pci" domain="0x0000" slot="0x03" bus="0x00"/>
      <model type="rtl8139"/>
    </interface>
    <input type="mouse" bus="ps2"/>
    <input type="keyboard" bus="ps2"/>
    <serial type="pty">
      <alias name="serial0"/>
      <target port="0"/>
      <source path="/dev/pts/1"/>
    </serial>
    {% for disk in disks %}
      <disk device="disk" type="file">
        <target dev="{{ disk.name }}" bus="{{ disk.bus }}"/>
        <source file="{{ disk.file }}"/>
        <driver type="{{ disk.type }}" name="qemu"/>
        <alias name="{{ disk.bus }}-{{ disk.address.target }}-{{ disk.address.unit }}-{{ disk.address.bus }}-{{ disk.address.controller }}"/>
        <address type="drive" target="{{ disk.address.target }}" unit="{{ disk.address.unit }}" bus="{{ disk.address.bus }}" controller="{{ disk.address.controller }}"/>
      </disk>
    {% endfor %}
  </devices>
  <on_crash>restart</on_crash>
  <on_reboot>restart</on_reboot>
  <vcpu placement="static">1</vcpu>
  <features>
    <pae/>
    <acpi/>
    <apic/>
  </features>
  <memory unit="KiB">{{ memmory_size }}</memory>
  <os>
    <type machine="pc-i440fx-trusty" arch="x86_64">hvm</type>
    <boot dev="hd"/>
  </os>
  <clock offset="utc"/>
  <name>{{ resource_id }}</name>
</domain>
