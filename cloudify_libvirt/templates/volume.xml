<volume>
  <name>{{ name }}</name>
  <uuid>{{ instance_uuid }}</uuid>
  <allocation unit='MiB'>{{ allocation }}</allocation>
  <capacity unit='MiB'>{{ capacity }}</capacity>
  <target>
    <permissions>
      <owner>107</owner>
      <group>107</group>
      <mode>0744</mode>
      <label>virt_image_t</label>
    </permissions>
  </target>
</volume>
